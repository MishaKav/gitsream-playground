# -*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  migrations:
    if:
      - {{ pr.labels | match(term="diff") | some }}
    run: 
      - action: add-comment@v1
        args:
          comment: |
            We detected a call to Ignore Pattern of "Playgound".
            {{ diff_files }}

diff_files: {{ source | getDiffFiles("Playground") }}